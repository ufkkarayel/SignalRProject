@model SignalRWebUI.Dtos.CategoryDtos.UpdateCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Kategori İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title"> Kategori Güncelleme Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <input type="hidden" asp-for="CategoryID"  />
                                <label for="categoryname">Kategori Adı</label>
                                <input type="text" asp-for="CategoryName" class="form-control" id="categoryname">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-info">Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>